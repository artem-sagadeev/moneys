@page
@model Web.Pages.ProfileModel

@{
    ViewData["Title"] = "Profile";
}

<div class="p-2">
    <div class="h4">User: @Model.Profile.UserName</div>
    <hr/>
</div>
<div class="d-flex">
    <div class="p-2">
        <button type="button" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#addCardModal">
            Add card
        </button>
    </div>
</div>
<div class="d-flex flex-wrap">
    @foreach (var card in Model.Cards)
    {
        <div class="p-2">
            <div class="card border-dark mb-3" style="width: 18rem;">
                <div class="card-header">@card.Name</div>
                <div class="card-body">
                    <h5 class="card-title">@card.Balance</h5>
                    <form method="POST">
                        <button type="button" class="btn-link card-link" onclick="updateCard('@card.Name', '@card.Id')" data-bs-toggle="modal" data-bs-target="#updateCardModal">Update</button>
                        <button type="submit" class="btn-link card-link" asp-page-handler="DeleteCard" asp-route-id="@card.Id">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

<!-- Add Card Modal -->
<div class="modal fade" id="addCardModal" tabindex="-1" aria-labelledby="addCardModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="POST" asp-page-handler="AddCard">
                <div class="modal-header">
                    <h5 class="modal-title" id="addCardModalLabel">Add card</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="addCardName" class="form-label">Name</label>
                        <input type="text" class="form-control input-dark" id="addCardName" name="name" autocomplete="off">
                    </div>
                    <div class="mb-3">
                        <label for="startBalance" class="form-label">Start balance</label>
                        <input type="number" class="form-control input-dark" id="startBalance" name="startBalance" autocomplete="off">
                    </div>
                </div>
                <input type="hidden" name="id">
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-dark">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Update Card Modal -->
<div class="modal fade" id="updateCardModal" tabindex="-1" aria-labelledby="updateCardModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="POST" asp-page-handler="UpdateCard">
                <div class="modal-header">
                    <h5 class="modal-title" id="updateCardModalLabel">Update card</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="updateCardName" class="form-label">Name</label>
                        <input type="text" class="form-control input-dark" id="updateCardName" name="name" autocomplete="off">
                    </div>
                </div>
                <input type="hidden" name="id" id="updateCardId">
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-dark">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
let updateCard = function (cardName, cardId) {
    document.getElementById("updateCardName").value = cardName;
    document.getElementById("updateCardId").value = cardId;
}
</script>